<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaModernApp.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaModernApp.Views.ContactsView"
             x:DataType="vm:ContactsViewModel">

    <Grid RowDefinitions="Auto, *" Margin="20">
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20" ColumnDefinitions="*, Auto">
            <StackPanel Grid.Column="0">
                <TextBlock Text="Contacts" Theme="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Gestiona tu agenda" Theme="{StaticResource BodyTextBlockStyle}" Opacity="0.6"/>
            </StackPanel>
            
            <Button Grid.Column="1" VerticalAlignment="Center" Click="OnAddContactClick">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ui:SymbolIcon Symbol="Add" />
                    <TextBlock Text="Agregar contacto" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Search & List -->
        <Grid Grid.Row="1" RowDefinitions="Auto, *">
            <TextBox Grid.Row="0" Text="{Binding SearchText}" Watermark="Search de Contacts..." Margin="0,0,0,20">
                <TextBox.InnerRightContent>
                    <ui:SymbolIcon Symbol="Find" Margin="0,0,10,0" Opacity="0.5"/>
                </TextBox.InnerRightContent>
            </TextBox>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding FilteredContacts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10" Background="{DynamicResource SolidBackgroundFillColorSecondaryBrush}"
                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                                    CornerRadius="4" Padding="12">
                                <Grid ColumnDefinitions="Auto, *, Auto">
                                    <!-- Avatar -->
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Background="#2000d4ff" Margin="0,0,16,0">
                                        <TextBlock Text="{Binding Initials}" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   FontWeight="Bold" Foreground="#00d4ff"/>
                                    </Border>
                                    
                                    <!-- Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding PhoneNumber}" Opacity="0.6" FontSize="12"/>
                                    </StackPanel>
                                    
                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                                        <Button Theme="{StaticResource TransparentButton}" ToolTip.Tip="Message">
                                            <ui:SymbolIcon Symbol="Message" />
                                        </Button>
                                        <Button Theme="{StaticResource TransparentButton}" ToolTip.Tip="Editar">
                                             <ui:SymbolIcon Symbol="Edit" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
